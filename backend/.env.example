# Database Configuration (for local development)
# When running in Docker, this is automatically overridden via docker-compose
DATABASE_URL=postgresql://smartbookmarks:dev_password@localhost:5432/smartbookmarks

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-api-key-here

# Model Configuration
AI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Content Extraction Configuration
REQUEST_TIMEOUT_MS=10000
USER_AGENT=Mozilla/5.0 (compatible; SmartBookmarkBot/1.0)

# Logging
LOG_LEVEL=info

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# BullMQ Configuration
BULLMQ_REMOVE_ON_COMPLETE=100
BULLMQ_REMOVE_ON_FAIL=1000
WORKER_CONCURRENCY=5
