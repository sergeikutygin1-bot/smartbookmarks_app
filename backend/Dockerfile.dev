FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci --legacy-peer-deps

# Copy Prisma schema and generate client
COPY prisma ./prisma
RUN npx prisma generate

# Copy source code
COPY . .

# Expose API port
EXPOSE 3002

# Default command (overridden in docker-compose for worker)
CMD ["npm", "run", "dev"]
